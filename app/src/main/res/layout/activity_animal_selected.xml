<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/landscape"
    android:orientation="vertical"
    tools:context="com.exerciseapp.mattiapalmas.alice.animals.AnimalSelected">

    <include layout="@layout/content_anima_lmain" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="60dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/animalImg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:onClick="speak"
            app:srcCompat="@drawable/monkey" />

        <TextView
            android:id="@+id/animalText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_weight="2"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:onClick="speak"
            android:text="Monkey"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>
